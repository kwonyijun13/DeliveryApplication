<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="이츠 시작하기"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="지금 로그인하고\n무료배달과 기간 한정 쿠폰 혜택 놓치지 마세요."
        android:textSize="15sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/coupang_app_login_MaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="OO 앱으로 간편 로그인"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        app:cornerRadius="0dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/email_login_MaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="아이디(이메일)로 로그인"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:cornerRadius="0dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kakao_login_MaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/kakao_yellow"
        android:text="카카오 로그인"
        android:textColor="@color/black"
        app:icon="@drawable/kakao_icon"
        app:iconTint="@color/black"
        app:iconGravity="textStart"
        app:iconSize="12dp"
        app:cornerRadius="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 회원이 아니신가요? "
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/signup_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 회원가입"
            android:textColor="@color/navy"
            android:textSize="10sp"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>